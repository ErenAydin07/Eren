void Fonksiyonel(int n){
	
	int sayac;
	
	sayac = n;
	
	while(sayac > 0){
		
	
		n= n*sayac;
		sayac--;
	}
	
}




void DeciToBina(int n) {

    int a[10], i;

    for (i = 0; n > 0; i++)
    {
        a[i] = n % 2;
        n = n / 2;
    }
    
    for (i = i - 1; i >= 0; i--)
    {
        cout << a[i];
        


    }
}

void gitxy(int x, int y)
{
    COORD coord;
    coord.X = x;
    coord.Y = y;

    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

void ikile(string a) {

    int tasiyici;

    tasiyici = rand() % 2 + 1;

    if (tasiyici == 1) {

        a = "0";

    }
    else {

        a = "1";
    }
}
